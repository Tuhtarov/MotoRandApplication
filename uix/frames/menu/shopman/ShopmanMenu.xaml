<Window x:Class="MotoRandApplication.uix.frames.menu.shopman.ShopmanMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MotoRandApplication.uix.frames.menu.shopman"
        mc:Ignorable="d"
        Icon="C:\Users\tuhtarov\Desktop\projectsVS\MotoRandApplication\res\images\icons\iconStore.png"
        Title="Рабочий стол"
        MinHeight="650"
        MinWidth="850">
    <Grid
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">

        <!-- Фрейм -->
        <Frame
            x:Name="ShopmanMenuFrame"
            Background="LightGray"
            NavigationUIVisibility="Hidden">
        </Frame>

        <!-- Тулбар -->
        <Grid
            VerticalAlignment="Top"
            Height="50"
            HorizontalAlignment="Stretch"
            Background="#FFED9C4A">

            <StackPanel 
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                VerticalAlignment="Center">

                <Label
                    x:Name="ShopmanTextEmployee" 
                    Content="Имя Фамилия" 
                    Style="{StaticResource MainMenuToolBarLabel}"
                    VerticalAlignment="Center">
                </Label>

                <Image
                    Source="C:\Users\tuhtarov\Desktop\projectsVS\MotoRandApplication\res\images\icons\profileIcon.png"
                    Stretch="Fill"
                    StretchDirection="DownOnly"
                    VerticalAlignment="Center"
                    Height="15"
                    Width="15"
                    Margin="10">
                </Image>
            </StackPanel>
        </Grid>

        <!-- Сайд меню -->
        <Grid
            x:Name="sideMenu"
            Width="200"
            HorizontalAlignment="Left">

            <Grid.Effect>
                <DropShadowEffect
                    Opacity="0.2"
                    BlurRadius="20"
                    ShadowDepth="2"/>
            </Grid.Effect>

            <StackPanel
                Orientation="Vertical"
                Background="White">

                <Grid
                    VerticalAlignment="Top"
                    Height="50"
                    Background="#FFED9C4A">
                    <TextBlock
                        x:Name="textMenu"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        FontSize="15"
                        Foreground="White"
                        Text="Меню"/>
                    <Button
                        Click="ClickOnSideBar"
                        HorizontalAlignment="Right"
                        Margin="0 0 6 0"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Height="30"
                        Width="35">
                        <Image 
                            Source="C:\Users\tuhtarov\Desktop\projectsVS\MotoRandApplication\res\images\icons\barIcon.png"/>
                    </Button>
                </Grid>

                <ListView
                    Margin="5 10 0 0"
                    HorizontalAlignment="Left"
                    BorderBrush="Transparent"
                    Width="auto"
                    FontSize="15"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListViewItem
                        Margin="0 10 0 0"
                        Focusable="False"
                        Cursor="Hand">
                        <StackPanel
                            Orientation="Horizontal">
                            <Image 
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Height="28"
                                MouseLeftButtonDown="MainMenuClick"
                                Source="C:\Users\tuhtarov\Desktop\projectsVS\MotoRandApplication\res\images\icons\desktop.png"/>
                            <TextBlock 
                                Margin="15 0 0 0"
                                MouseLeftButtonDown="MainMenuClick"
                                Text="Рабочий стол"
                                VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListViewItem>

                    <ListViewItem
                        Margin="0 10 0 0"
                        Focusable="False"
                        Cursor="Hand">
                        <StackPanel
                            Orientation="Horizontal">
                            <Image 
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Height="25"
                                Cursor="Hand"
                                MouseLeftButtonDown="ClickStore"
                                Source="C:\Users\tuhtarov\Desktop\projectsVS\MotoRandApplication\res\images\iconsOperator\storeIcon.png"/>
                            <TextBlock 
                                Margin="15 0 0 0"
                                Text="Продажа"
                                MouseLeftButtonDown="ClickStore"
                                Cursor="Hand"
                                VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListViewItem>

                    <ListViewItem
                        Margin="0 10 0 0"
                        Focusable="False"
                        Cursor="Hand">
                        <StackPanel
                            Orientation="Horizontal">
                            <Image 
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Height="40"
                                MouseLeftButtonDown="ClickCustomerRegistration"
                                Cursor="Hand"
                                Source="C:\Users\tuhtarov\Desktop\projectsVS\MotoRandApplication\res\images\icons\customer.png"/>
                            <TextBlock 
                                Margin="15 0 0 0"
                                Cursor="Hand"
                                MouseLeftButtonDown="ClickCustomerRegistration"
                                Text="Клиенты"
                                VerticalAlignment="Center"/>
                        </StackPanel>
                    </ListViewItem>
                </ListView>
            </StackPanel>

            <Grid
                Width="200"
                VerticalAlignment="Bottom">
                <Button
                    HorizontalAlignment="Right"
                    x:Name="BtnLeaveSystem"
                    Margin="0,0,10,10"
                    Height="35"
                    Width="70"
                    FontSize="15"
                    BorderBrush="Transparent"
                    Background="#FFFF7F7F"
                    Style="{StaticResource StyleButtonOnForms}"
                    Click="BtnLeaveSystem_Click"
                    Content="Выход">
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
